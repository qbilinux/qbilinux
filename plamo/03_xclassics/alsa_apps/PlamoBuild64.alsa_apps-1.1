      | sed 's@$(bindir)/jack@$(DESTDIR)$(bindir)/jack@g' > Makefile.in
  cd $W/fltk-1.1.10
  ./configure --prefix=$W/fltk CFLAGS="-fPIC" CXXFLAGS="-fPIC"
  make
  make install
  OPT_CONFIG[3]="${OPT_CONFIG[3]} --with-fltk-config=$W/fltk/bin"
  for i in `seq 0 $((${#B[@]} - 1))` ; do
    cd ${B[$i]}
