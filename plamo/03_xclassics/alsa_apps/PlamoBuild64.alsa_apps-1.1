  install2 ${B[2]}/vkeybd.man $mandir/man1/vkeybd.1
  touch $W/i.et
  cd $W
  find $P ! -type l -newer i.st ! -newer i.et \
      -exec touch -t `date '+%m%d0900'` {} \;
  compress
  cp -p $P/usr/bin/vkeybd $P/usr/share/vkeybd
