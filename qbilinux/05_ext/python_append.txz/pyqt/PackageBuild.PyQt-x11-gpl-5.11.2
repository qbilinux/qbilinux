#!/bin/sh
##############################################################
pkgbase=pyqt
vers=5.11.2
url="https://sourceforge.net/projects/pyqt/files/PyQt5/PyQt-${vers}/PyQt5_gpl-${vers}.tar.gz"
apply_arch="x86_64 i686 armv7l"
arch=`uname -m`
build=T1
src=PyQt5_gpl-${vers}
OPT_CONFIG='--disable-static'
DOCS='ChangeLog LICENSE NEWS README'
patchfiles=''
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/plamo-nora/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    python3 ./configure.py --confirm-license

    # Thanks Gerardo for the rpath fix
    if [ "$arch" = "x86_64" ]; then
	find -name 'Makefile' | xargs sed -i 's|-Wl,-rpath,/usr/lib64||g;s|-Wl,-rpath,.* ||g'
    else
    	find -name 'Makefile' | xargs sed -i 's|-Wl,-rpath,/usr/lib||g;s|-Wl,-rpath,.* ||g'
    fi

    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    make
    
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    make install DESTDIR=$P INSTALL_ROOT=$P

    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/plamo-nora/PackageBuild.func
