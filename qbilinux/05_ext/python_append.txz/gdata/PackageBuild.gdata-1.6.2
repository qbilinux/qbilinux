#!/bin/sh
##############################################################
#url='http://gdata-python-client.googlecode.com/files/gdata-2.0.17.tar.gz'
pkgbase=gdata
vers=1.6.2
url='https://github.com/google/google-api-python-client/archive/v1.6.2.tar.gz'
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=google-api-python-client-${vers}
OPT_CONFIG=''
DOCS='CHANGELOG LICENSE README.md'
patchfiles=''
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

install2() {
source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
}

do_build() {
    cd ${B[$1]}
    if [ -f setup.py ] ; then
	python setup.py -v build
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    if [ -f setup.py ] ; then
	python ./setup.py install --root=$P
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
