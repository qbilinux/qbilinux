#!/bin/sh
##############################################################
#url='http://mutagen.googlecode.com/files/mutagen-1.20.tar.gz'
url='https://pypi.python.org/packages/1a/cf/c6da6cf9fcbc99a03f6a62dacf89ed6b45ff6fd1ecbb6c0ef3f90c528310/mutagen-1.20.tar.gz'
pkgbase=mutagen
vers=1.20
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=2
src=mutagen-1.20
OPT_CONFIG=''
DOCS='COPYING NEWS README TODO'
patchfiles=''
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    if [ -f setup.py ] ; then
	python ./setup.py config
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f setup.py ] ; then
	python ./setup.py build
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    if [ -f setup.py ] ; then
	python ./setup.py install --prefix=$P/usr
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
