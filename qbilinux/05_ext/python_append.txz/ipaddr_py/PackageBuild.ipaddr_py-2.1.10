#!/bin/sh

######################################################################
#url="https://ipaddr-py.googlecode.com/files/ipaddr-2.1.10.tar.gz"
url="http://pkgs.fedoraproject.org/repo/pkgs/python-ipaddr/ipaddr-2.1.10.tar.gz/f315ac829218e9735c5d772d59a3e0e7/ipaddr-2.1.10.tar.gz"
pkgbase=ipaddr_py
vers=2.1.10
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=ipaddr-$vers
OPT_CONFIG=""
DOCS="COPYING README RELEASENOTES"
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
}

do_build() {
    cd ${B[$1]}
    python setup.py build
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    python setup.py install --root=$P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
