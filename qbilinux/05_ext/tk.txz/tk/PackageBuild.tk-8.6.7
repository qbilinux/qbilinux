#!/bin/sh

######################################################################
pkgbase=tk
vers=8.6.7
url="http://jaist.dl.sourceforge.net/sourceforge/tcl/tk${vers}-src.tar.gz"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=tk$vers
OPT_CONFIG="--enable-threads"
DOCS="changes ChangeLog.2002 README ChangeLog license.terms
    ChangeLog.2004"
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}/unix
    if [ $arch = "x86_64" ]; then
	cp -p configure configure.orig
	sed '/^TK_LIBRARY=/s@lib@lib64@g' configure.orig > configure
    fi
    if [ -x ${S[$1]}/configure ] ; then
	export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
	export LDFLAGS='-Wl,--as-needed' 
	${S[$1]}/configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc \
		--localstatedir=/var --infodir='${prefix}'/share/info --mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}/unix
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}/unix
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install install-private-headers DESTDIR=$P
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
  ln -s wish8.5 $P/usr/bin/wish
  mv $P/usr/bin/{wish8.5,wish} $C
  mv $C/{wish8.5,wish} $P/usr/bin
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
