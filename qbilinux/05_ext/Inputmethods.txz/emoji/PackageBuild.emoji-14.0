#!/bin/sh
##############################################################
pkgbase=emoji
vers=14.0
url='http://www.unicode.org/Public/emoji/14.0/ReadMe.txt
http://www.unicode.org/Public/emoji/14.0/emoji-sequences.txt
http://www.unicode.org/Public/emoji/14.0/emoji-test.txt
http://www.unicode.org/Public/emoji/14.0/emoji-zwj-sequences.txt'
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=1
src=$pkgbase-$vers
OPT_CONFIG=''
DOCS=''
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
}

do_build() {
    cd ${B[$1]}
}

do_install() {
    cd ${B[$1]}

    mkdir -p $P/usr/share/unicode/emoji
    mkdir -p $docdir/$src
    cp $W/emoji-sequences.txt $P/usr/share/unicode/emoji
    cp $W/emoji-test.txt $P/usr/share/unicode/emoji
    cp $W/emoji-zwj-sequences.txt $P/usr/share/unicode/emoji
    cp $W/ReadMe.txt $P/usr/share/doc/$docdir/$src
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
