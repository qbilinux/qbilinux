#!/bin/sh
##############################################################
url='http://downloads.xvid.org/downloads/xvidcore-1.3.2.tar.gz'
pkgbase=xvidcore
vers=1.3.2
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=1
src=xvidcore
OPT_CONFIG=''
DOCS='AUTHORS ChangeLog ChangeLog-1.0 LICENSE README TODO'
patchfiles=''
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    cp -f /usr/src/qbilinux/{config.guess,config.sub} build/generic
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}/build/generic/
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    ./configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc \
		--localstatedir=/var --infodir='${prefix}'/share/info --mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}/build/generic/
    export LDFLAGS='-Wl,--as-needed'
    make
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}/build/generic/
    export LDFLAGS='-Wl,--as-needed'
    make install DESTDIR=$P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
    # staticなライブラリは不便なので、共有ライブラリのみにする
    rm $P/usr/${libdir}/libxvidcore.a
    ( cd $P/usr/${libdir} ; ln -sf libxvidcore.so.4.3 libxvidcore.so.4 )
    ( cd $P/usr/${libdir} ; ln -sf libxvidcore.so.4 libxvidcore.so )
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
