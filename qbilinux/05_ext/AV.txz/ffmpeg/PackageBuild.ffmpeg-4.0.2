#!/bin/sh
##############################################################
pkgbase=ffmpeg
vers=4.0.2
url="http://www.ffmpeg.org/releases/ffmpeg-${vers}.tar.bz2"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=ffmpeg-${vers}
OPT_CONFIG="--enable-shared --disable-static --disable-debug --enable-runtime-cpudetect"
# Arch Linux configurations
OPT_CONFIG="$OPT_CONFIG \
 --enable-libmp3lame \
 --enable-libvorbis \
 --enable-libx264 \
 --enable-libvpx \
 --enable-libtheora \
 --enable-libgsm \
 --enable-libspeex \
 --enable-postproc \
 --enable-libopencore_amrnb \
 --enable-libopencore_amrwb \
 --enable-libopenjpeg \
 --enable-librtmp \
 --enable-libpulse \
 --enable-gpl \
 --enable-version3 \
"  # libfaac is not compatible with GPL
#  --enable-nonfree \
#  --enable-libfaac "
# もうちょっと追加
OPT_CONFIG="$OPT_CONFIG \
 --enable-libvo-amrwbenc
 --enable-libass"
if [ $arch != "armv7l" -o $arch != "aarch64" ]; then
    OPT_CONFIG="$OPT_CONFIG --enable-libx265"
fi
DOCS='COPYING.GPLv2 COPYING.GPLv3 COPYING.LGPLv2.1 COPYING.LGPLv3 CREDITS Changelog INSTALL.md LICENSE.md MAINTAINERS README.md RELEASE RELEASE_NOTES VERSION'
patchfiles=''
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir ${B[$1]}
    cd ${B[$1]}
    if [ -x ${S[$1]}/configure ] ; then
	export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
	export LDFLAGS='-Wl,--as-needed' 
        ${S[$1]}/configure --prefix=/usr --libdir=/usr/${libdir} --shlibdir=/usr/${libdir} \
		--mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install DESTDIR=$P
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    mkdir -p $P/usr/${libdir}
    compat_libs='libavcodec.so.54.92.100 libavdevice.so.54.3.103 libavfilter.so.3.42.103 libavformat.so.54.63.104 libavutil.so.52.18.100 libpostproc.so.52.2.100 libswresample.so.0.17.102 libswscale.so.2.2.100'
    for cl in $compat_libs; do
	cp $W/${arch}_${cl} $P/usr/${libdir}/${cl}
	lnk=`echo $cl | cut -f1-3 -d'.'`
	( cd $P/usr/${libdir} ; ln -sf $cl $lnk )
    done
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
