#!/bin/sh
##############################################################
pkgbase=python2_setuptools
vers=38.2.4
url='https://pypi.python.org/packages/69/56/f0f52281b5175e3d9ca8623dadbc3b684e66350ea9e0006736194b265e99/setuptools-38.2.4.zip'
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=setuptools-${vers}
OPT_CONFIG=''
DOCS='CHANGES.rst LICENSE PKG-INFO README.rst'
patchfiles=''
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    python ./setup.py config        
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    python setup.py build
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    python setup.py install --root $P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi
    ( cd $P/usr/bin ; rm easy_install )
    ( cd $P/usr/bin ; ln -sf easy_install-2.7 easy_install )
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
