#!/bin/sh
##############################################################
pkgbase=qtwebengine
vers=6.6.1
url="https://download.qt.io/archive/qt/${vers%.*}/${vers}/submodules/qtwebengine-everywhere-src-${vers}.tar.xz"
commitid=
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=1
src=qtwebengine-everywhere-src-${vers}
OPT_CONFIG=''
DOCS='LICENSE.GPL2 LICENSE.GPL3 LICENSE.GPL3-EXCEPT LICENSE.GPLv3 LICENSE.LGPL3'
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    sed -e '/link_pulseaudio/s/false/true/' \
	-i src/3rdparty/chromium/media/media_options.gni
    sed -e 's/\^(?i)/(?i)^/' \
	-i src/3rdparty/chromium/tools/metrics/ukm/ukm_model.py
    sed -e "s/'rU'/'r'/" \
	-i src/3rdparty/chromium/tools/grit/grit/util.py
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir ${B[$1]}
    cd ${B[$1]}
    if [ -f ${S[$1]}/CMakeLists.txt ]; then
      export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
      export LDFLAGS='-Wl,--as-needed' 
      cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DLIB_INSTALL_DIR:PATH=/usr/${libdir} -DLIB_SUFFIX=$suffix ${OPT_CONFIG} ${S[$1]}
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make install INSTALL_ROOT=$P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    # Fix internal linking for Qt6WebEngineCore.pc.
    sed -i 's|-Wl,--start-group.*-Wl,--end-group||' $P/usr/lib${suffix}/pkgconfig/Qt6WebEngineCore.pc

    #./usr/lib64/pkgconfig/Qt6WebEngineCore.pc
    sed -i 's|-L$W[^ ]* ||g' $P/usr/lib${suffix}/pkgconfig/Qt6WebEngineCore.pc

    # While we are at it, there isn't any reason to keep references to $PKG in the *.prl files.
    for PRL in $(find $P -name "*\.prl"); do
	sed -i '/^QMAKE_PRL_BUILD_DIR/d' $PRL
    done

    # Remove executable bits from files.
    find $P \( -name "*.qml" -o -name "*.app" \) -perm 755 -exec chmod 644 '{}' \;
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
