#!/bin/sh
##############################################################
pkgbase=qtwebengine
vers=5.15.8
url="https://anduin.linuxfromscratch.org/BLFS/qtwebengine/qtwebengine-${vers}.tar.xz"
commitid=
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=1
src=qtwebengine-${vers}
OPT_CONFIG='-- -system-ffmpeg -webengine-icu'
DOCS='LICENSE.GPL2 LICENSE.GPL3 LICENSE.GPL3-EXCEPT LICENSE.GPLv3 LICENSE.LGPL3'
patchfiles='qtwebengine-5.15.8-build_fixes-1.patch'
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    mkdir -pv .git src/3rdparty/chromium/.git
    sed -e '/^MODULE_VERSION/s/5.*/5.15.3/' -i .qmake.conf
    find -type f -name "*.pr[io]" |
	xargs sed -i -e 's|INCLUDEPATH += |&$$QTWEBENGINE_ROOT/include |'
    sed -e '/link_pulseaudio/s/false/true/' \
	-i src/3rdparty/chromium/media/media_options.gni
    sed -i 's/NINJAJOBS/NINJA_JOBS/' src/core/gn_run.pro
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir ${B[$1]}
    cd ${B[$1]}
    qmake-qt5 ${S[$1]} $OPT_CONFIG
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make install INSTALL_ROOT=$P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    # Fix internal linking for Qt5WebEngineCore.pc.
    sed -i 's|-Wl,--start-group.*-Wl,--end-group||' $P/usr/lib${suffix}/pkgconfig/Qt5WebEngineCore.pc

    #./usr/lib64/pkgconfig/Qt5WebEngineCore.pc
    sed -i 's|-L$W[^ ]* ||g' $P/usr/lib${suffix}/pkgconfig/Qt5WebEngineCore.pc

    # While we are at it, there isn't any reason to keep references to $PKG in the *.prl files.
    for PRL in $(find $P -name "*\.prl"); do
	sed -i '/^QMAKE_PRL_BUILD_DIR/d' $PRL
    done

    # Remove executable bits from files.
    find $P \( -name "*.qml" -o -name "*.app" \) -perm 755 -exec chmod 644 '{}' \;
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
