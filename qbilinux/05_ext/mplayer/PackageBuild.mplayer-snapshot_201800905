#!/bin/sh

######################################################################
pkgbase=mplayer
vers=snapshot_20180905
url="http://circle2.org/pub/source/mplayer-export-snapshot_20180905.tar.bz2"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=mplayer-export-2018-09-05
if [ $arch = "armv7l" -o $arch = "aarch64" ]; then
OPT_CONFIG="--confdir=/etc/mplayer --enable-gui --enable-radio
    --disable-inet6 --disable-ossaudio --disable-esd --language=ja"
else
OPT_CONFIG="--confdir=/etc/mplayer --enable-gui --enable-radio
    --disable-inet6 --disable-ossaudio --disable-esd --language=ja
    --enable-runtime-cpudetection"
fi
DOCS="snapshot_version LICENSE README Copyright AUTHORS Changelog"
patchfiles=''
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/plamo-nora/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    if [ -x ./configure ] ; then
	export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
	export LDFLAGS='-Wl,--as-needed' 
	echo "\n" | ./configure --prefix=/usr --libdir=/usr/$libdir \
          --mandir=/usr/share/man ${OPT_CONFIG[$i]} \
          --codecsdir=/usr/$libdir/codecs
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install DESTDIR=$P
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    mkdir -p $docdir/$src/
    cat <<- "EOF" > $docdir/$src/README.DVD
	平成24年度著作権法改正の結果、商用DVDの内容を暗号化する
	CSS(Contents Scramble Sysmte)が「技術的保護手段」とされ、
	それを解除する行為が違法と見なされるようになりました。
	
	それに伴い、Plamo LinuxでもCSSを解除するlibdvdcssライブラリを
	外して、メディアプレイヤー等もこのライブラリを参照しないように
	しました．
	
	# libdvdcss パッケージにはビルドスクリプトのみが入っています
	
	お手数ですが，Plamo Linux上で商用DVDを試聴したい方は，
	上記ビルドスクリプトで libdvdcss をビルド，インストールした上で，
	利用したいメディアプレイヤーを再ビルドしてください．
	
	いつの日か，このファイルを消せる日が来ることを願いつつ．．
	
	2012/09/14  KOJIMA
	EOF
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/plamo-nora/PackageBuild.func
