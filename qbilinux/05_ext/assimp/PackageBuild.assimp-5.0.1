#!/bin/sh
##############################################################
pkgbase="assimp"
vers=5.0.1
url='https://github.com/assimp/assimp/archive/refs/tags/v5.0.1.tar.gz'
srcfile=assimp-${vers}.tar.gz
commitid=
apply_arch="x86_64 i686 armv7l aarch64"
arch=${arch:-`uname -m`}
build=3
src=assimp-${vers}
OPT_CONFIG=''
DOCS='CMakeCache.txt INSTALL LICENSE README Readme.md assimpTargets-release.cmake cmake_install.cmake cmake_uninstall.cmake'
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################


source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}


do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir ${B[$1]}
    cd ${B[$1]}
    if [ -f ${S[$1]}/CMakeLists.txt ]; then
      export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
      export LDFLAGS='-Wl,--as-needed' 
      cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DASSIMP_LIB_INSTALL_DIR:STRING=${libdir} -DLIB_SUFFIX=$suffix ${OPT_CONFIG} ${S[$1]}
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    export LDFLAGS='-Wl,--as-needed'
    make install DESTDIR=$P
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    sed -i -e "s/\/lib\//\/${libdir}\//g" $P/usr/lib64/cmake/assimp-5.0/assimpTargets-release.cmake
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
