#!/bin/sh
##############################################################
pkgbase=xfce_theme_albatross
vers=1.7.3
url="https://github.com/shimmerproject/Albatross/archive/v${vers}.tar.gz"
srcfile=${pkgbase}-${vers}.tar.gz
apply_arch="noarch"
arch=noarch
build=2
src=Albatross-${vers}
OPT_CONFIG=''
DOCS='LICENSE.CC LICENSE.GPL README'
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
}

do_build() {
    cd ${B[$1]}
}

do_install() {
    cd ${B[$1]}

    themedir=$P/usr/share/themes
    install -d ${themedir}/${pkgbase}
    cp -a * ${themedir}/${pkgbase}
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
