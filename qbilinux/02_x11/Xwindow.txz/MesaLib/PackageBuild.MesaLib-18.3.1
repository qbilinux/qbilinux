#!/bin/sh
##############################################################
pkgbase=MesaLib
vers=18.3.1
url="ftp://ftp.freedesktop.org/pub/mesa/mesa-${vers}.tar.xz"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T1
src=mesa-${vers}
case $arch in
    armv7l | aarch64)
	OPT_CONFIG='--enable-llvm-shared-libs
         --enable-gles1  --enable-gles2 
         --enable-osmesa --enable-xa --enable-gbm 
         --enable-glx-tls 
         --with-gallium-drivers=vc4
	 --with-dri-drivers=swrast
         ';;
    *)
	OPT_CONFIG='--enable-llvm-shared-libs
         --enable-gles1  --enable-gles2 
         --enable-osmesa --enable-xa --enable-gbm 
         --enable-glx-tls 
         --with-platforms=drm,x11
         --with-gallium-drivers=nouveau,r300,r600,radeonsi,svga,swrast,i915
         ';;
esac
DOCS='docs/*'

# http://www.linuxfromscratch.org/patches/blfs/svn/MesaLib-9.1.6-add_xdemos-1.patch
patchfiles='mesa-18.3.1-add_xdemos-1.patch'

compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir -p ${B[$1]}
    cd ${B[$1]}
    if [ -x /usr/bin/clang -a -x /usr/bin/clang++ ]; then
	export CC="clang"
	export CXX='clang++'
    else
        export LDFLAGS='-Wl,--as-needed' 
	export CC="gcc"
	export CXX="g++ -std=c++11"
    fi
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig:/opt/kde/${libdir}/pkgconfig
    ${S[$1]}/configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc --localstatedir=/var --mandir='${prefix}'/share/man --with-dri-driverdir=/usr/${libdir}/dri ${OPT_CONFIG[$i]}
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
    # -Werror=date-time implemented from GCC-4.9
    sed -i -e 's/ -Werror=date-time//' src/gallium/auxiliary/Makefile
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make V=1 
	make -C xdemos DEMOS_PREFIX=/usr
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install DESTDIR=$P
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    mkdir -p $P/usr/bin
    for i in glxgears glxinfo ; do
	install xdemos/$i $P/usr/bin
    done
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
