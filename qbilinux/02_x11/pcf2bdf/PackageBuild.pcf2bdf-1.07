#!/bin/sh
##############################################################
pkgbase=pcf2bdf
vers=1.07
url="https://github.com/ganaware/pcf2bdf/archive/refs/tags/${vers}.tar.gz"
srcfile=${pkgbase}-${vers}.tar.gz
apply_arch="x86_64 i686 armv7l aarch64"
arch=${arch:-`uname -m`}
build=1
src=pcf2bdf-${vers}
OPT_CONFIG=''
DOCS='README.txt pcf.txt'
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd $W/source
    mkdir $src
    mv * $src
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
}

do_build() {
    cd ${B[$1]}
    make -f Makefile.gcc
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    make install PREFIX=$P/usr MANPATH=$P/usr/share/man/man1 -f Makefile.gcc
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
