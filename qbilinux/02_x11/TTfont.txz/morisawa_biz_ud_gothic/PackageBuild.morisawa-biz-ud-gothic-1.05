#!/bin/sh
##############################################################
pkgbase="morisawa_biz_ud_gothic"
vers=1.05
url='https://github.com/googlefonts/morisawa-biz-ud-gothic/archive/refs/tags/v1.05.tar.gz'
srcfile=morisawa-biz-ud-gothic-1.05.tar.gz
commitid=
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=1
src=morisawa-biz-ud-gothic-${vers}
OPT_CONFIG=''
DOCS='AUTHORS.txt CONTRIBUTORS.txt OFL.txt README.md requirements.txt'
patchfiles=''
compress=txz
SRC_URL=${SRC_URL:-"https://qbilinux.org/pub/source/"}
SRC_DIR=${SRC_DIR:-"/home/archives/source/"}
##############################################################


source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}


do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi
}

do_build() {
    cd ${S[$1]}
}

do_install() {
    cd ${S[$1]}
    mkdir -p $P/usr/share/fonts/TrueType
    for i in BIZUDGothic-Bold BIZUDGothic-Regular BIZUDPGothic-Bold BIZUDPGothic-Regular ; do
	cp -p fonts/ttf/$i.ttf $P/usr/share/fonts/TrueType
    done
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
