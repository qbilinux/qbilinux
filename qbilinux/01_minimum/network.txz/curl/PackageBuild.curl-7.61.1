vers=7.61.1
url="http://curl.haxx.se/download/curl-${vers}.tar.bz2"
commitid=
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=curl-${vers}
OPT_CONFIG='--disable-ldap --disable-rtsp
    --with-gssapi-includes=/usr/include --without-librtmp --with-libssh2'
DOCS='docs/BINDINGS.md 
docs/BUGS
docs/CHECKSRC.md
docs/CIPHERS.md
docs/CODE_OF_CONDUCT.md
docs/CODE_STYLE.md
docs/CONTRIBUTE.md
docs/DEPRECATE.md
docs/FAQ
docs/FEATURES
docs/GOVERNANCE.md
docs/HELP-US.md
docs/HISTORY.md
docs/HTTP-COOKIES.md
docs/HTTP2.md
docs/INSTALL
docs/INSTALL.cmake
docs/INSTALL.md
docs/INTERNALS.md
docs/KNOWN_BUGS
docs/LICENSE-MIXING.md
docs/MAIL-ETIQUETTE
docs/MANUAL
docs/README.cmake
docs/README.md
docs/README.netware
docs/README.win32
docs/RELEASE-PROCEDURE.md
docs/RESOURCES
