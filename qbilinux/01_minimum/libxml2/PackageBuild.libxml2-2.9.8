#!/bin/sh

######################################################################
pkgbase=libxml2
vers=2.9.8
url="http://xmlsoft.org/sources/libxml2-${vers}.tar.gz"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T4
src=$pkgbase-$vers
OPT_CONFIG="--with-history --disable-static --with-python=/usr/bin/python3 --with-icu"
DOCS="AUTHORS COPYING ChangeLog INSTALL NEWS README TODO Copyright
    TODO_SCHEMAS README.tests"
patchfiles="libxml2-2.9.7-python3_hack-1.patch"
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    sed -i '/_PyVerify_fd/,+1d' python/types.c
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    mkdir ${B[$1]}
    cd ${B[$1]}
    if [ -x ${S[$1]}/configure ] ; then
	export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
	export LDFLAGS='-Wl,--as-needed' 
	${S[$1]}/configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc \
		--localstatedir=/var --infodir='${prefix}'/share/info --mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install DESTDIR=$P HTML_DIR=/usr/share/doc/libxml2/html \
             DOC_MODULE=libxml2
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
    mkdir -p $docdir/$src
    mv $docdir/libxml2/examples $docdir/$src
    mv $docdir/libxml2/html $docdir/$src/doc
    mv $docdir/libxml2-python-$vers $docdir/$src/python
    mv $docdir/$src/{examples,{Copyright,TODO_SCHEMAS,README.tests}.gz} $C
    mv $docdir/$src/{doc,python,$myname.gz} $C
    mv $C/{examples,{Copyright,TODO_SCHEMAS,README.tests}.gz} $docdir/$src
    mv $C/{doc,python,$myname.gz} $docdir/$src
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
