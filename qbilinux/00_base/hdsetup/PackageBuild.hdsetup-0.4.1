apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=2
src[0]=busybox-1.32.1
src[1]=dialog-1.3-20180621
src[2]=coreutils-8.32
src[3]=gzip-1.10
src[4]=bzip2-1.0.6
