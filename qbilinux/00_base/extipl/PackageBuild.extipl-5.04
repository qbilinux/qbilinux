#!/bin/sh

######################################################################
pkgbase=extipl
vers=5.04
url="http://jaist.dl.sourceforge.jp/extipl/2166/extipl-${vers}.tar.gz"
apply_arch="x86_64 i686"
arch=`uname -m`
build=1
src=$pkgbase-$vers
OPT_CONFIG=""
DOCS="`echo doc/{English,Japanese}/{extipl,scorpius,techical}.txt`
    COPYING README"
patchfiles="extipl-5.04-syscall.patch extipl-5.04-x86_64.patch"
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    if [ $arch != x86_64 ] ; then
	cat $W/extipl-5.04-syscall.patch | patch -Np1 -i -
    else
	cat $W/extipl-5.04-x86_64.patch | patch -Np1 -i -
    fi
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    cd src ; make
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    cd src ; make -i install install-jman PREFIX=$P \
		  MANDIR=$mandir JMANDIR=$mandir/ja_JP.eucJP
    rm -rf $P/share
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
