#!/bin/sh

######################################################################
pkgbase=pciutils
vers=3.6.2
url="http://www.kernel.org/pub/software/utils/pciutils/pciutils-${vers}.tar.xz
    http://pciids.sourceforge.net/v2.2/pci.ids"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=T2
src=$pkgbase-$vers
OPT_CONFIG=""
DOCS="TODO README ChangeLog README.Windows COPYING"
compress=txz
SRC_URL="http://circle2.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done

    cp -p $W/pci.ids .
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    if [ $arch == x86_64 -o $arch == aarch64 ] ; then
	cp -p Makefile{,.orig}
	sed -i '/^LIBDIR=/s@lib@lib64@g' Makefile
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make ZLIB=no SHARED=yes PCI_COMPRESSED_IDS=0 PREFIX=/usr
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    for mk in `find . -name "[Mm]akefile" ` ; do
	sed -i -e 's|GCONFTOOL = /usr/bin/gconftool-2|GCONFTOOL = echo|' $mk
    done
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make install DESTDIR=$P ZLIB=no SHARED=yes PREFIX=/usr
	make install-lib DESTDIR=$P ZLIB=no SHARED=yes PREFIX=/usr
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
}

do_package() {
    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
