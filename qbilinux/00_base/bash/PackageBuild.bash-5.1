#!/bin/sh

######################################################################
pkgbase=bash
vers=5.1
url="http://ftp.gnu.org/gnu/bash/bash-${vers}.tar.gz
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-001
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-002
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-003
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-004
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-005
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-006
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-007
	http://ftp.gnu.org/gnu/bash/bash-5.1-patches/bash51-008"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=2
src[0]=$pkgbase-${vers}
src[1]=${src[0]}
OPT_CONFIG[0]="--bindir=/bin --without-bash-malloc --with-installed-readline"
OPT_CONFIG[1]="${OPT_CONFIG[0]} --enable-static-link"
DOCS[0]="ABOUT-NLS AUTHORS ChangeLog CHANGES COMPAT COPYING INSTALL
    NEWS NOTES POSIX RBASH README Y2K"
DOCS[1]=""
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    case $1 in
	0)
	    patch -p2 < $W/bash51-001
	    patch -p2 < $W/bash51-002
	    patch -p2 < $W/bash51-003
	    patch -p2 < $W/bash51-004
	    patch -p2 < $W/bash51-005
	    patch -p2 < $W/bash51-006
	    patch -p2 < $W/bash51-007
	    patch -p2 < $W/bash51-008
	    ;;
    esac
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    ./configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc \
	    --localstatedir=/var --infodir='${prefix}'/share/info --mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	case $1 in
	    0) make install htmldir=/usr/share/doc/html DESTDIR=$P ;;
	    1) install bash $P/bin/bash-static ;;
	esac
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
}

do_package() {
    ln -s bash $P/bin/sh

    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
