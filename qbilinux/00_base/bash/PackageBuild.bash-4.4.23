source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$i]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    case $1 in
	0)
	    patch -p2 -i $W/bash44-001
	    patch -p2 -i $W/bash44-002
	    patch -p2 -i $W/bash44-003
	    patch -p2 -i $W/bash44-004
	    patch -p2 -i $W/bash44-005
