#!/bin/sh

######################################################################
pkgbase=bash
vers=5.0
url="http://ftp.gnu.org/gnu/bash/bash-${vers}.tar.gz
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-001
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-002
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-003
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-004
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-005
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-006
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-007
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-008
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-009
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-010
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-011
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-012
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-013
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-014
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-015
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-016
	http://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-017"
apply_arch="x86_64 i686 armv7l aarch64"
arch=`uname -m`
build=4
src[0]=$pkgbase-${vers}
src[1]=${src[0]}
OPT_CONFIG[0]="--bindir=/bin --without-bash-malloc --with-installed-readline"
OPT_CONFIG[1]="${OPT_CONFIG[0]} --enable-static-link"
DOCS[0]="ABOUT-NLS AUTHORS ChangeLog CHANGES COMPAT COPYING INSTALL
    NEWS NOTES POSIX RBASH README Y2K"
DOCS[1]=""
compress=txz
SRC_URL="https://qbilinux.org/pub/source/"
SRC_DIR="/home/archives/source/"
######################################################################

source /usr/src/qbilinux/PackageBuild.def

do_prepare() {
    cd ${S[$1]}
    for patch in $patchfiles ; do
	patch -p1 < $W/$patch
    done
    case $1 in
	0)
	    patch -p2 -i $W/bash50-001
	    patch -p2 -i $W/bash50-002
	    patch -p2 -i $W/bash50-003
	    patch -p2 -i $W/bash50-004
	    patch -p2 -i $W/bash50-005
	    patch -p2 -i $W/bash50-006
	    patch -p2 -i $W/bash50-007
	    patch -p2 -i $W/bash50-008
	    patch -p2 -i $W/bash50-009
	    patch -p2 -i $W/bash50-010
	    patch -p2 -i $W/bash50-011
	    patch -p2 -i $W/bash50-012
	    patch -p2 -i $W/bash50-013
	    patch -p2 -i $W/bash50-014
	    patch -p2 -i $W/bash50-015
	    patch -p2 -i $W/bash50-016
	    patch -p2 -i $W/bash50-017
	    ;;
    esac
}

do_config() {
    if [ -d ${B[$1]} ] ; then rm -rf ${B[$1]} ; fi

    cp -a ${S[$1]} ${B[$1]}
    cd ${B[$1]}
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    ./configure --prefix=/usr --libdir=/usr/${libdir} --sysconfdir=/etc \
	    --localstatedir=/var --infodir='${prefix}'/share/info --mandir='${prefix}'/share/man ${OPT_CONFIG[$1]}
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
}

do_build() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	make
    fi
    if [ $? != 0 ]; then
	echo "make error. $0 script stop"
	exit 255
    fi
}

do_install() {
    cd ${B[$1]}
    if [ -f Makefile ] ; then
	export LDFLAGS='-Wl,--as-needed'
	case $1 in
	    0) make install htmldir=/usr/share/doc/html DESTDIR=$P ;;
	    1) install bash $P/bin/bash-static ;;
	esac
    fi
    if [ $? != 0 ]; then
	echo "make install error. $0 script stop"
	exit 255
    fi

    # add extra func
}

do_package() {
    ln -s bash $P/bin/sh

    for i in $pkgbase ; do
        cd $P
        /sbin/makepkg $W/$pkg.$compress <<EOF
y
1
EOF
    done
}

source /usr/src/qbilinux/PackageBuild.func
