    #   /sbin/makepkg ../${pkgbin}.$compress <<EOF
    # y
    # 1
    # EOF
    #   cd ${P}_lib
    #   /sbin/makepkg ../${pkglib}.$compress <<EOF
    # y
    # 1
    # EOF
  
    cd ${P}
    /sbin/makepkg $W/${pkg}.$compress <<EOF
y
1
EOF

}

